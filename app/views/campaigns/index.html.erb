<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-bold">Campaigns</h1>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full">
          <thead class="bg-white">
            <tr class="text-gray-900">
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left font-semibold text-gray-900 sm:pl-3">Title</th>
              <th scope="col" class="px-3 py-3.5 text-left font-semibold text-gray-900">State</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-3">
                <span class="sr-only">Show</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @campaigns.each do |status, campaigns| %>
              <tr class="border-t border-gray-200">
                <th colspan="5" scope="colgroup" class="bg-gray-50 py-2 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3"><%= status.humanize %></th>
              </tr>
              <%= render 'campaign_group', campaigns: campaigns %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>